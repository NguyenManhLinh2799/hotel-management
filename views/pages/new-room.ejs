<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">Thêm phòng mới</div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">Nhập thông tin phòng
                <% include ../messages %>
            </div>
            <form action="/new-room" method="POST">
                <div class="form-group">
                    <div class="form-label-group">
                        <input type="text" id="inputRoomID" class="form-control" placeholder="Mã phòng" name="roomID" required="required" autofocus="autofocus">
                        <label for="inputRoomID">Mã phòng</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-label-group">
                        <input type="number" id="inputMoney" class="form-control" placeholder="Giá tiền" name="Money" required="required">
                        <label for="inputMoney">Giá tiền</label>

                    </div>
                </div>
                <div class="form-group">
                    <label for="imgtext">Hình ảnh</label>
                    <input type="text" id="imgtext" class="form-control" placeholder="Link">

                </div>
                <button type="submit" class="btn btn-primary btn-block">Thêm</button>
            </form>
        </div>
    </div>
</div>