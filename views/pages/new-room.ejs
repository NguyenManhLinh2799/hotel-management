<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">Thêm phòng mới</div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <% include ../messages %>
            </div>
            <form action="/users/login" method="POST">
                <div class="form-group">
                    <div class="form-label-group">
                        <input type="email" id="inputEmail" class="form-control" placeholder="Email" name="email" required="required" autofocus="autofocus">
                        <label for="inputEmail">Mã phòng</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-label-group">
                        <input type="password" id="inputPassword" class="form-control" placeholder="Mật khẩu" name="password" required="required">
                        <label for="inputPassword">Giá tiền</label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Thêm</button>
            </form>
        </div>
    </div>
</div>