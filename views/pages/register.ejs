<div class="container">
	<div class="card card-register mx-auto mt-5">
		<div class="card-header">Đăng ký nhân viên mới</div>
		<div class="card-body">
				<% include ../messages %>
			<form action="/users/register" method="POST">
				<div class="form-group">
					<div class="form-row">
						<div class="col-md-6">
							<div class="form-label-group">
								<input type="text" id="name" class="form-control" placeholder="Họ tên" name="name"
									required="required" autofocus="autofocus">
								<label for="name">Họ tên</label>
							</div>
						</div>
					</div>
				</div>
				<div class="form-group">
					<div class="form-label-group">
						<input type="email" id="inputEmail" class="form-control" placeholder="Email" name="email"
							required="required">
						<label for="inputEmail">Email</label>
					</div>
				</div>
				<div class="form-group">
					<div class="form-row">
						<div class="col-md-6">
							<div class="form-label-group">
								<input type="password" id="inputPassword" class="form-control" placeholder="Mật khẩu" name="password"
									required="required">
								<label for="inputPassword">Mật khẩu</label>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-label-group">
								<input type="password" id="confirmPassword" class="form-control" oninput="check(this)"
									placeholder="Xác nhận mật khẩu" required="required">
								<label for="confirmPassword">Xác nhận mật khẩu</label>
							</div>
						</div>
					</div>
				</div>
				<div class="form-group">
					<h6>Chức vụ</h6>
					<input type="radio" name="position" value="manager" checked> Quản lý<br>
					<input type="radio" name="position" value="accountant"> Kế toán viên<br>
					<input type="radio" name="position" value="receptionist"> Lễ tân<br>
				</div>
				<button type="submit" class="btn btn-primary btn-block">Đăng ký</button>
			</form>
			<div class="text-center">
				<a class="d-block small mt-3" href="/users/login">Trang đăng nhập</a>
			</div>
		</div>
	</div>
</div>

<script>
    function check(input) {
        if (input.value != document.getElementById('inputPassword').value) {
            input.setCustomValidity('Mật khẩu không khớp');
        } else {
            input.setCustomValidity('');
        }
    }
</script>