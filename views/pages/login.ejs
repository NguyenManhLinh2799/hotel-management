<div class="container">
	<div class="card card-login mx-auto mt-5">
		<div class="card-header">Đăng nhập</div>
		<div class="card-body">
			<div class="alert alert-warning" role="alert">
				<% include ../messages %>
			</div>
			<form action="/users/login" method="POST">
				<div class="form-group">
					<div class="form-label-group">
						<input type="email" id="inputEmail" class="form-control" placeholder="Email" name="email"
							required="required" autofocus="autofocus">
						<label for="inputEmail">Email</label>
					</div>
				</div>
				<div class="form-group">
					<div class="form-label-group">
						<input type="password" id="inputPassword" class="form-control" placeholder="Mật khẩu" name="password"
							required="required">
						<label for="inputPassword">Mật khẩu</label>
					</div>
				</div>
				<button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
			</form>
			<div class="text-center">
				<a class="d-block small mt-3" href="/users/register">Đăng ký nhân viên mới</a>
			</div>
		</div>
	</div>
</div>